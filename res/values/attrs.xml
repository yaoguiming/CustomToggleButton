<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    
    <!-- 声名属性集的名称 -->
    <declare-styleable name="CustomToggleBtn">

        <!-- 声名一个属性  name是my_background   类型为 引用类型      引用资源ID -->
        <attr name="custom_background" format="reference" />

        <!-- 声名一个属性  name是my_slide_btn   类型为 引用类型      引用资源ID -->
        <attr name="custom_slide_btn" format="reference" />

        <!-- 声名一个属性  name是curr_state   类型为 boolean 类型-->
        <attr name="current_state" format="boolean" />
        
    </declare-styleable>
    
    
</resources>